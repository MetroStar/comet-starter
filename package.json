{
  "name": "comet-starter",
  "homepage": "https://metrostar.github.io/comet-starter/",
  "private": true,
  "version": "1.0.0",
  "description": "React and TypeScript starter app, pre-configured with the Comet component library and other tools.",
  "license": "Apache-2.0",
  "keywords": [
    "uswds",
    "react",
    "components",
    "comet",
    "open source"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npx eslint src/ --fix --config eslint.config.js",
    "lint:ci": "npx eslint src/ --config eslint.config.js",
    "format": "npx prettier src --write",
    "format:ci": "npx prettier src --check",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "e2e": "npx playwright test --ui",
    "e2e:ci": "npx playwright test",
    "a11y": "unlighthouse --config-file .unlighthouse.config.ts --site http://localhost:8080",
    "a11y:ci": "unlighthouse --config-file .unlighthouse.config.ts --headless",
    "predeploy": "vite build --base=/comet-starter/",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@metrostar/comet-data-viz": "1.2.1",
    "@metrostar/comet-extras": "1.7.2",
    "@metrostar/comet-uswds": "3.7.7",
    "@tanstack/react-query": "5.83.0",
    "axios": "1.10.0",
    "axios-mock-adapter": "2.1.0",
    "jotai": "2.12.5",
    "oidc-client-ts": "^3.3.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.60.0",
    "react-oidc-context": "^3.3.0",
    "react-router-dom": "7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "4.10.3",
    "dotenv": "^17.2.0",
    "eslint": "9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "puppeteer": "^24.12.1",
    "sass": "1.89.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0",
    "unlighthouse": "0.17.1",
    "vite": "^6.3.5",
    "vite-plugin-environment": "1.1.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.0.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.24.0"
  }
}
